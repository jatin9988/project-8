@{
    ViewBag.Title = "HomePage";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/UIFiles/css/components.css">
    <link rel="stylesheet" href="~/UIFiles/css/icons.css">
    <link rel="stylesheet" href="~/UIFiles/css/responsee.css">
    <link rel="stylesheet" href="~/UIFiles/owl-carousel/owl.carousel.css">
    <link rel="stylesheet" href="~/UIFiles/owl-carousel/owl.theme.css">
    <link rel="stylesheet" href="~/UIFiles/css/template-style.css">
    <link href='https://fonts.googleapis.com/css?family=Playfair+Display&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,700,800&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
    <script type="text/javascript" src="~/UIFiles/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="~/UIFiles/js/jquery-ui.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body class="size-1140">

    <!-- HEADER -->
    <header role="banner" class="position-absolute">
        <!-- Top Navigation -->
        <nav class="background-transparent background-transparent-hightlight full-width sticky">
            <div class="s-12 l-2" style="padding-top:20px;font-size:21px;">
                @Html.ActionLink("Seller Management", "HomePage", "Home", " ", new { @style = "color:gray;" })
            </div>
            <div class="top-nav s-12 l-10">
                <p class="nav-text"></p>
                <ul class="right chevron">
                    @if (Session["USERID"] == null)
                    {
                        <li>@Html.ActionLink("Contact Us", "ProCre", "ContUsPro", " ", new { @style = "font-size:15px;" })</li>
                        <li>
                            @Html.ActionLink("Locate Us", "LocateUs", "Home", " ", new { @style = "font-size:15px;" })
                        </li>
                        <li>
                            @Html.ActionLink("Products", "ProDet", "Product", " ", new { @style = "font-size:15px;" })
                        </li>
                        <li>
                            @Html.ActionLink("About", "About", "Home", " ", new { @style = "font-size:15px;" })
                        </li>
                        <li>
                            @Html.ActionLink("Log In", "ProLgIn", "ProLogIn", " ", new { @style = "font-size:15px;" })
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Log Out", "LogOut", "ProLogIn", " ", new { @style = "font-size:15px;" })
                        </li>
                        <li>
                            @Html.ActionLink("Contact Us Data", "ProInd", "ContUsPro", " ", new { @style = "font-size:v;" })
                        </li>
                        <li>
                            @Html.ActionLink("Product Details", "ProInd", "Product", " ", new { @style = "font-size:15px;" })
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>

    <!-- MAIN -->
    <main role="main">
        <!-- Main Header -->
        <header>
            <div class="carousel-default owl-carousel carousel-main carousel-nav-white background-dark text-center">
                <div class="item">
                    <div class="s-12">
                        <img src="~/UIFiles/img/header.jpg" alt="">
                        <div class="carousel-content">
                            <div class="content-center-vertical line">
                                <div class="margin-top-bottom-80">
                                    <!-- Title -->
                                    <h1 class="text-white margin-bottom-30 text-size-60 text-m-size-30 text-line-height-1">Maximum Organization With Minimal Paperwork</h1>
                                    <div class="line">
                                        <div class="s-12 m-12 l-3 center">
                                            <a class="button button-white-stroke s-12" href="/">Get Started Now</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

    </main>

    <!-- FOOTER -->
    <footer>

        <!-- Bottom Footer -->
        <section class="padding background-dark full-width">
            <div class="s-12 l-6">
                <p class="text-size-12">Copyright 2019</p>
            </div>
        </section>
    </footer>
    <script type="text/javascript" src="~/UIFiles/js/responsee.js"></script>
    <script type="text/javascript" src="~/UIFiles/owl-carousel/owl.carousel.js"></script>
    <script type="text/javascript" src="~/UIFiles/js/template-scripts.js"></script>

</body>
</html>